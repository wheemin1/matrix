  // Instagram ê³µìœ  ê¸°ëŠ¥ ì œê±°ë¨

  const handleDownload = async () => {
    try {
      toast({
        title: "PDF ìƒì„± ì¤‘",
        description: "ë¶„ì„ ê²°ê³¼ PDFë¥¼ ì¤€ë¹„í•˜ê³  ìˆìŠµë‹ˆë‹¤.",
      });
      
      // ê²°ê³¼ ì´ë¯¸ì§€ ìƒì„±ì„ ìœ„í•œ ì»¨í…Œì´ë„ˆ ì„ íƒ
      const element = document.querySelector('.matrix-visualization-container') as HTMLElement;
      if (!element) throw new Error("ë¶„ì„ ê²°ê³¼ ì»¨í…Œì´ë„ˆë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.");
      
      // html2canvas ë¼ì´ë¸ŒëŸ¬ë¦¬ë¥¼ ì‚¬ìš©í•˜ì—¬ ê³ í’ˆì§ˆ ì´ë¯¸ì§€ ìƒì„±
      const canvas = await html2canvas(element, {
        scale: 2, // ê³ í•´ìƒë„
        backgroundColor: '#0f172a', // ë°°ê²½ìƒ‰ ì§€ì •
        logging: false,
        useCORS: true, // ì™¸ë¶€ ì´ë¯¸ì§€ ë¡œë“œ í—ˆìš©
        allowTaint: true, // êµì°¨ ì¶œì²˜ ì´ë¯¸ì§€ í—ˆìš©
      });
      
      const imgData = canvas.toDataURL('image/jpeg', 0.85);
      
      // PDF ìƒì„±
      const pdf = new jsPDF({
        orientation: 'portrait',
        unit: 'mm',
        format: 'a4'
      });
      
      const pdfWidth = pdf.internal.pageSize.getWidth();
      const pdfHeight = pdf.internal.pageSize.getHeight();
      const imgWidth = canvas.width;
      const imgHeight = canvas.height;
      const ratio = Math.min(pdfWidth / imgWidth, pdfHeight / (imgHeight + 30));
      const imgX = (pdfWidth - imgWidth * ratio) / 2;
      const imgY = 10;
      
      // í—¤ë” ì¶”ê°€
      pdf.setFillColor(15, 23, 42); // ì–´ë‘ìš´ ë°°ê²½ìƒ‰
      pdf.rect(0, 0, pdfWidth, pdfHeight, 'F');
      
      // ì œëª© ì¶”ê°€
      pdf.setTextColor(255, 255, 255);
      pdf.setFont('helvetica', 'bold');
      pdf.setFontSize(16);
      
      const title = mode === 'couple' 
        ? `${result.person1.name}ê³¼ ${result.person2.name}ì˜ ë°ìŠ¤í‹°ë‹ˆ ë§¤íŠ¸ë¦­ìŠ¤`
        : `${result.name}ì˜ ë°ìŠ¤í‹°ë‹ˆ ë§¤íŠ¸ë¦­ìŠ¤`;
        
      pdf.text(title, pdfWidth/2, 20, { align: 'center' });
      
      // ì´ë¯¸ì§€ ì¶”ê°€
      pdf.addImage(imgData, 'JPEG', imgX, imgY + 15, imgWidth * ratio, imgHeight * ratio);
      
      // í‘¸í„° ì¶”ê°€
      pdf.setFontSize(10);
      pdf.setFont('helvetica', 'normal');
      pdf.setTextColor(150, 150, 150);
      pdf.text('Â© ë°ìŠ¤í‹°ë‹ˆ ë§¤íŠ¸ë¦­ìŠ¤ - destiny33.netlify.app', pdfWidth/2, pdfHeight - 10, { align: 'center' });
      
      // PDF ì €ì¥
      pdf.save('ìš´ëª…ì˜_ë§¤íŠ¸ë¦­ìŠ¤_ë¶„ì„ê²°ê³¼.pdf');
      
      toast({
        title: "PDF ìƒì„± ì™„ë£Œ",
        description: "ë¶„ì„ ê²°ê³¼ê°€ PDFë¡œ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤.",
      });
    } catch (error) {
      console.error("PDF ìƒì„± ì˜¤ë¥˜:", error);
      toast({
        title: "PDF ìƒì„± ì‹¤íŒ¨",
        description: "PDF ìƒì„± ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤. ë‹¤ì‹œ ì‹œë„í•´ì£¼ì„¸ìš”.",
        variant: "destructive",
      });
    }
  };

  if (showLoading) {
    return (
      <div className="glass-card p-8 sm:p-16 text-center">
        <div className="w-20 h-20 sm:w-24 sm:h-24 mx-auto mb-4 sm:mb-6 relative">
