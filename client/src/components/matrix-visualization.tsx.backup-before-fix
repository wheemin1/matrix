    updateContainerSize();

    // ë¦¬ì‚¬ì´ì¦ˆ ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ
    window.addEventListener('resize', updateContainerSize);

    return () => {
      clearTimeout(timer1);
      clearTimeout(timer2);
      window.removeEventListener('resize', updateContainerSize);
    };
  }, [isMobile]);

  // ìµœì í™”ëœ ë§¤íŠ¸ë¦­ìŠ¤ í¬ì¸íŠ¸ ìœ„ì¹˜ ê³„ì‚°
  const optimizedPositions = calculateOptimizedPositions(result.matrixPoints, containerSize);

  // ê²°ê³¼ê°€ ë¡œë“œë˜ë©´ í•´ì„ íƒ­ì„ í‘œì‹œí•˜ê¸° ìœ„í•œ useEffect
  useEffect(() => {
    if (result) {
      // ë¡œë”© ì• ë‹ˆë©”ì´ì…˜ ì—†ì´ ë°”ë¡œ ë³´ì´ë„ë¡ ì„¤ì •
