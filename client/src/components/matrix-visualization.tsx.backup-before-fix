                  {/* ë‚´ë¶€ í¬ì¸íŠ¸ ì—°ê²°ì„  */}
                  {[
                    ['additional1', 'spiritualPurpose'],
                    ['additional1', 'talent'],
                    ['additional2', 'talent'],
                    ['additional2', 'karma'],
                    ['additional3', 'karma'],
