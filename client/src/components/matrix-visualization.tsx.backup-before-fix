    try {
      // ê³µìœ í•  URL ìƒì„±
      const shareUrl = window.location.href;
      
      // Web Share API ì§€ì› í™•ì¸ (ëª¨ë°”ì¼)
      if (navigator.share) {
        await navigator.share({
          title: title,
          text: 'ë‚˜ì˜ ìš´ëª… ë§¤íŠ¸ë¦­ìŠ¤ë¥¼ í™•ì¸í•´ë³´ì„¸ìš”!',
          url: shareUrl
        });
        
        toast({
          title: "ê³µìœ  ì„±ê³µ",
          description: "ë¶„ì„ ê²°ê³¼ê°€ ê³µìœ ë˜ì—ˆìŠµë‹ˆë‹¤.",
        });
      } else {
        // í´ë¦½ë³´ë“œì— URL ë³µì‚¬ (PC)
        await navigator.clipboard.writeText(shareUrl);
        
        toast({
          title: "ê³µìœ  ë§í¬ ë³µì‚¬ë¨",
          description: "ë¶„ì„ ê²°ê³¼ ë§í¬ê°€ í´ë¦½ë³´ë“œì— ë³µì‚¬ë˜ì—ˆìŠµë‹ˆë‹¤.",
        });
      }
    } catch (error) {
      console.error("ê³µìœ  ì˜¤ë¥˜:", error);
      toast({
        title: "ê³µìœ  ì‹¤íŒ¨",
        description: "ë§í¬ ê³µìœ  ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.",
        variant: "destructive",
      });
    }
