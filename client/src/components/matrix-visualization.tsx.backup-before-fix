                      key={`main-${index}`}
                      x1={optimizedPositions[start].pixelX}
                      y1={optimizedPositions[start].pixelY}
                      x2={optimizedPositions[end].pixelX}
                      y2={optimizedPositions[end].pixelY}
                      stroke="rgba(255, 255, 255, 0.2)"
                      strokeWidth="1"
                    />
