{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["es2018", "dom"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "build"]
}
